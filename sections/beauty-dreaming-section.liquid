
    <div class="container">
      <div class="beauty-row-wrappers">
        <div class="beauty-container aos-init aos-animate">
          <h1 class="beauty-h1">{{ section.settings.header }}</h1>
          <p class="beauty-paragraph">{{ section.settings.paragraph }}</p>
        </div>
        <div class="beauty-why-content">
          <div class="beauty-content">
            <div data-aos-delay="200" data-aos="fade-in" data-aos-easing="linear" data-aos-duration="500" class="beauty-usp-col aos-init aos-animate">
              <div class="usp-item">
                <h1 class="usp-item-h1">{{ section.settings.benefit_1_headline }}</h1>
                <p>{{ section.settings.benefit_1_paragraph }}</p>
              </div>
            </div>
            <div data-aos-delay="200" data-aos="fade-in" data-aos-easing="linear" data-aos-duration="500" class="beauty-usp-col aos-init aos-animate">
              <div class="usp-item">
                <h1 class="usp-item-h1">{{ section.settings.benefit_2_headline }}</h1>
                <p>{{ section.settings.benefit_2_paragraph }}</p>
              </div>
            </div>
            <div data-aos-delay="200" data-aos="fade-in" data-aos-easing="linear" data-aos-duration="500" class="beauty-usp-col aos-init aos-animate">
              <div class="usp-item">
                <h1 class="usp-item-h1">{{ section.settings.benefit_3_headline }}</h1>
                <p>{{ section.settings.benefit_3_paragraph }}</p>
              </div>
            </div>
          </div>
          <div class="content-img-wrapper"><img src="{{ 'silkbox_0082-1.png' | asset_url }}" loading="lazy" sizes="(max-width: 479px) 76vw, (max-width: 767px) 81vw, (max-width: 991px) 85vw, (max-width: 1279px) 47vw, 601px" srcset="{{ 'silkbox_0082-1-p-500.png' | asset_url }} 500w, {{ 'silkbox_0082-1.png' | asset_url }} 588w" alt="" class="image-beauty-section"></div>
          <div class="carousel-beauty aos-init aos-animate">
            <div id="carousel-silk-benefits-product" class="owl-carousel owl-theme dors-custom1 owl-loaded owl-drag">
              <div class="owl-stage-outer">
                <div class="owl-stage">
                  {%- for block in section.blocks -%}{%- if block.type == "benefit_slide" -%}<div class="owl-item card-slide" block.shopify_attributes>
                    <div class="item-benefits">
                      <h1 class="usp-title">{{ block.settings.headline }}</h1>
                      <p class="usp-benefit-description">{{ block.settings.paragraph }}</p>
                    </div>
                  </div>{%- endif -%}{%- endfor -%}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="w-embed">
      <style>
/* The css beneath is for the OWL slider on the next section */
#carousel-silk-benefits {
	width: calc(100% + 30px);
  margin: -15px;
}
</style>
    </div>
  

