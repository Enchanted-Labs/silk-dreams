
    <div class="page-padding">
      <div class="container-large">
        <div data-delay="4000" data-animation="slide" class="categories-slider-collection-page w-slider" data-autoplay="false" data-easing="ease" data-hide-arrows="true" data-disable-swipe="false" data-autoplay-limit="0" data-nav-spacing="8" data-duration="500" data-infinite="false">
          <div class="categorie-item w-slider-mask">
            {%- for block in section.blocks -%}{%- if block.type == "category_slide_block" -%}<div class="categorie-item-slide w-slide" block.shopify_attributes>
              <a href="{{ block.settings.collection_link }}" class="categorie-card w-inline-block">
                <div class="collection-img">{%- if block.settings.collection_image == nil -%}<img src="{{ 'collection-img.png' | asset_url }}" loading="lazy" alt="" class="collection-pic-img">{%- else -%}<img src="{{ block.settings.collection_image.src | img_url: 'master' }}" loading="lazy" alt="{{ block.settings.collection_image.alt | escape }}" class="collection-pic-img" srcset="{{ block.settings.collection_image | img_url: '1920x' }} 1920w,{{ block.settings.collection_image | img_url: '1600x' }} 1600w,{{ block.settings.collection_image | img_url: '1366x' }} 1366w,{{ block.settings.collection_image | img_url: '1024x' }} 1024w,{{ block.settings.collection_image | img_url: '768x' }} 768w,{{ block.settings.collection_image | img_url: '640x' }} 640w">{%- endif -%}</div>
                <div class="categorie-info-wrapper">
                  <div class="categorie-information">
                    <p class="categories-p">{{ block.settings.title }}</p>
                    <p option:title="Tagline" class="collection-tagline">#1 BESTSELLER</p>
                  </div>
                  <div class="icon-regular w-embed"><svg width="21" height="20" viewBox="0 0 21 20" fill="none" xmlns="http://www.w3.org/2000/svg">
