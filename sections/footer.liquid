                {%- endfor -%}
                {%- render 'menu-error', menu: "footer-support" -%}
              </div>
            </div>
          </div>
          <div class="link-footer-block">
            <div data-w-id="b0bc4c49-c40f-aa3b-ba44-92089f4fde96" class="footer-navigation-title">
              <div>{{ section.settings.footer_headline_4 }}</div><img
                src="{{ 'ic16-chevron-down.svg' | asset_url }}"
                loading="lazy"
                alt=""
                class="footer-chevron">
            </div>
            <div class="footer-links-content">
              <div class="footer-info">
                {%- for link in linklists[section.settings.menu_4].links -%}
                  <a href="{{ link.url }}" class="footer-link-3 w-inline-block">{{ link.title }}</a>
                {%- endfor -%}
              </div>
            </div>
          </div>
        </div>
        <div id="w-node-b0bc4c49-c40f-aa3b-ba44-92089f4fdea4-9f4fde48" class="footer-legal-p">{{ section.settings.copyright_notice }}</div>
