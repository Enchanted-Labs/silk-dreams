          prevEl: ".swiper-button-prev",
        },
        pagination: { el: '.upsell-pagination', type: 'bullets', clickable: true },
        // Enable lazy loading
        lazy: true,
        keyboard: { enabled: true },
      });
    }
  }, 250);
</script>

<script type="module">
  import { getCart } from '{{ "liquid-ajax-cart-v1.10.3.js" | asset_url }}'

  function calculateProgress() {
    // Get the current cart data
    const cart = getCart();

    // Get the free shipping threshold from the section settings
    const freeShippingPrice = {{ section.settings.freeshipping_threshold }};

    // Calculate progress using the cartPriceCents and freeShippingPrice variables
    return cart.total_price * 100 / freeShippingPrice;
  }

  // Use the calculateProgress function in the subscribeToCartSectionsUpdate callback
  subscribeToCartSectionsUpdate(() => {
    const progress = calculateProgress();
    // Update the progress-circle element using the progress value
    const p = document.querySelector('.cart-top-left-title');
    p.innerHTML = `Winkelwagen ${progress}`;
  });
</script>





