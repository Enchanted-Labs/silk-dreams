
    <div class="page-padding socialproof">
      <div class="container-v1">
        <div class="testimonials-content">
          <div class="testimonials-tagline">{{ section.settings.tagline }}</div>
          <h1 class="testimonials-title">{{ section.settings.headline }}</h1>
          <div class="trustpilot-div"><img src="{{ 'stars-4.5.svg' | asset_url }}" loading="lazy" alt="" width="107"><img src="{{ 'trustpilot-1.svg' | asset_url }}" loading="lazy" alt="" width="76"></div>
        </div>
        <div>
          <div id="review-swiper" class="review-swiper">
            <div class="swiper-wrapper">
              {%- for block in section.blocks -%}{%- if block.type == "review_block" -%}<div class="swiper-slide review-card" block.shopify_attributes>
                <div class="review-swiper-block-2">
                  <div class="upper-rw-content">
                    <div class="trustpilot-divje-rw"><img src="{{ 'stars-4.5.svg' | asset_url }}" loading="lazy" alt="" width="87">
                      <div class="review-name">{{ block.settings.name }}</div>
                    </div>
                    <div class="date-rw">{{ block.settings.date }}</div>
                  </div>
                  <div class="bottom-rw-content">
                    <h1 class="review-swiper-title-2">{{ block.settings.title }}</h1>
                    <p class="review-text">{{ block.settings.description }}</p>
                  </div>
                </div>
              </div>{%- endif -%}{%- endfor -%}
            </div>
            <div class="swiper-pagination-container review">
              <div id="review-pagination" class="swiper-pagination swiper-pagination-clickable swiper-pagination-bullets">
                <div class="swiper-pagination-bullet active"></div>
                <div class="swiper-pagination-bullet"></div>
                <div class="swiper-pagination-bullet"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  

<script>var currentSection = document.currentScript.closest('.shopify-section');currentSection.setAttribute("class","testimonials-mobile");</script>
        
